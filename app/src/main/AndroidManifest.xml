<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ssn.sxmusic">

    <uses-permission android:name="android.permission.INTERNET" />

    <application

        android:name=".MusicApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MusicAndroid"
        android:usesCleartextTraffic="true">

        <activity
            android:name="com.ssn.sxmusic.ui.activity.Splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.ssn.sxmusic.ui.activity.Home"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.ssn.sxmusic.ui.activity.DetailSong"
            android:exported="true"
            android:parentActivityName="com.ssn.sxmusic.ui.activity.Home" />


        <service
            android:name=".service.MusicService"
            android:exported="true" />

    </application>

</manifest>

